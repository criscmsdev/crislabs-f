    "@tanstack/react-query": "4.19.1",
    "@tanstack/react-query-devtools": "4.19.1",
    "ahooks": "3.7.2",
    "clsx": "1.2.1",
    "concurrently": "7.5.0",
    "markdown-to-jsx": "7.1.8",
    "next": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.40.0",
    "react-markdown": "8.0.4",
    "react-quill": "2.0.0",
    "rehype-parse": "8.0.4",
